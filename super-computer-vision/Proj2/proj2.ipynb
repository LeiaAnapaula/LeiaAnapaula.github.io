# ===== Part 2.3: Gaussian & Laplacian stacks (Oraple only) =====
import os, numpy as np, matplotlib.pyplot as plt, cv2
from scipy.signal import convolve2d  # not used here, but fine if already imported

plt.close('all')
os.makedirs("figs", exist_ok=True)

def gaussian_blur(img, sigma, ksize=None):
    k = int(max(3, round(6*sigma)|1)) if ksize is None else int(ksize|1)
    return cv2.GaussianBlur(img, (k, k), sigmaX=sigma, sigmaY=sigma, borderType=cv2.BORDER_REFLECT)

def gaussian_stack(img, levels, sigma):
    """Same-size Gaussian stack (no downsampling)."""
    stack = [img.astype(np.float32).copy()]
    current = stack[0]
    for _ in range(levels - 1):
        current = gaussian_blur(current, sigma)
        stack.append(current.copy())
    return stack

def laplacian_stack(img, levels, sigma):
    """L_i = G_i - G_{i+1}; last level = G_{last}."""
    G = gaussian_stack(img, levels, sigma)
    L = [G[i] - G[i+1] for i in range(levels-1)]
    L.append(G[-1])
    return L

# --- Load inputs (apple/orange only) ---
apple  = cv2.cvtColor(cv2.imread("spline/apple.jpeg"),  cv2.COLOR_BGR2RGB).astype(np.float32)/255.0
orange = cv2.cvtColor(cv2.imread("spline/orange.jpeg"), cv2.COLOR_BGR2RGB).astype(np.float32)/255.0
h, w = min(apple.shape[0], orange.shape[0]), min(apple.shape[1], orange.shape[1])
apple  = cv2.resize(apple,  (w, h))
orange = cv2.resize(orange, (w, h))

# --- Parameters ---
levels = 5
sigma  = 2.0

# --- Build stacks ---
apple_L  = laplacian_stack(apple,  levels, sigma)
orange_L = laplacian_stack(orange, levels, sigma)

# --- Figure: show levels 0,2,4 and reconstructions ---
fig, axes = plt.subplots(4, 3, figsize=(15, 20))
display_levels = [0, 2, 4]
labels = ["Level 0 (high freq)", "Level 2 (med freq)", "Level 4 (low freq)"]

for r, lvl in enumerate(display_levels):
    # Apple
    axes[r,0].imshow(np.clip((apple_L[lvl] + 0.5) if lvl < levels-1 else apple_L[lvl], 0, 1))
    axes[r,0].set_title(f"Apple {labels[r]}");  axes[r,0].axis('off')
    # Orange
    axes[r,1].imshow(np.clip((orange_L[lvl]+ 0.5) if lvl < levels-1 else orange_L[lvl], 0, 1))
    axes[r,1].set_title(f"Orange {labels[r]}"); axes[r,1].axis('off')
    # Simple level-wise average just for visualization
    blended = (apple_L[lvl] + orange_L[lvl]) / 2.0
    axes[r,2].imshow(np.clip((blended + 0.5) if lvl < levels-1 else blended, 0, 1))
    axes[r,2].set_title(f"Blended {labels[r]}"); axes[r,2].axis('off')

# Reconstructions (sum of Laplacian levels)
apple_rec  = np.sum(apple_L,  axis=0)
orange_rec = np.sum(orange_L, axis=0)
oraple_avg = np.sum([(apple_L[i] + orange_L[i]) / 2.0 for i in range(levels)], axis=0)

axes[3,0].imshow(np.clip(apple_rec,  0, 1)); axes[3,0].set_title("Apple (reconstructed)");  axes[3,0].axis('off')
axes[3,1].imshow(np.clip(orange_rec, 0, 1)); axes[3,1].set_title("Orange (reconstructed)"); axes[3,1].axis('off')
axes[3,2].imshow(np.clip(oraple_avg, 0, 1)); axes[3,2].set_title("Oraple (simple average)"); axes[3,2].axis('off')

fig.suptitle("Laplacian Pyramid Blending (Figure 3.42)", fontsize=20)
fig.tight_layout()

# --- Save FIRST, then show ---
fig.savefig("figs/laplacian_stacks_oraple.png", dpi=150, bbox_inches='tight')

# Also save the pure image arrays for your report
import matplotlib.pyplot as _plt
_plt.imsave("figs/apple_reconstructed.png",  np.clip(apple_rec,  0, 1))
_plt.imsave("figs/orange_reconstructed.png", np.clip(orange_rec, 0, 1))
_plt.imsave("figs/oraple_simple.png",        np.clip(oraple_avg, 0, 1))

plt.show()
plt.close(fig)

print(f"Created {levels} levels; all outputs are {h}x{w}. Saved:")
print(" - figs/laplacian_stacks_oraple.png (grid)")
print(" - figs/apple_reconstructed.png")
print(" - figs/orange_reconstructed.png")
print(" - figs/oraple_simple.png")
